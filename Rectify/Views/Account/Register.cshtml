@using Rectify.Models;
@using Rectify.Models.ViewModels;
@model CompanyRegisterViewModel;


@{
    ViewData["Title"] = "Register";
    Layout = "_AccountLayout";
    var adminPassword = TempData["AdminPassword"] as string ?? "";
}

<head>
    <style>

        .checkbox-grey .form-check-input[type="checkbox"]:checked {
            background-color: grey !important;
            border-color: grey !important;
        }

        .form-control:focus {
            border-color: #ff1493;
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(255, 20, 147, 0.25);
        }

    </style>
</head>

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Register</h2>
        <form asp-action="Register" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" required/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" required/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" required/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            
            <input type="submit" value="Register" class="btn btn-pink w-100 p-2" />
        </form>
    </div>
</div>

<!-- Password Modal (always shown first) -->
<div class="modal fade show" id="passwordModal" tabindex="-1" aria-modal="true" style="display:block; background-color: rgba(0,0,0,0.6); z-index: 1055;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3">
            <div class="modal-header">
                <h5 class="modal-title">Admin Password Required</h5>
            </div>
            <div class="modal-body">
                <p>Enter admin password. If you do not have the password, please contact us to become part of Rectify, a better business solution!</p>
                <input type="password" id="adminPassword" class="form-control" placeholder="Enter Password" />
                <div class="text-danger mt-2 d-none" id="passwordError">Incorrect password. Please try again.</div>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <a class="btn btn-outline-secondary" href="@Url.Action("ContactUs", "Home")">Contact Us</a>
                <button class="btn btn-outline-pink" onclick="checkPassword()">Enter Password</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        const correctPassword = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(adminPassword));

        function checkPassword() {
            const input = document.getElementById("adminPassword").value;
            const error = document.getElementById("passwordError");

            if (input === correctPassword) {
                document.getElementById("passwordModal").style.display = "none";
                document.body.classList.remove("modal-open");
            } else {
                error.classList.remove("d-none");
            }
        }

        // Disable scrolling behind modal
        document.body.classList.add("modal-open");
    </script>
}