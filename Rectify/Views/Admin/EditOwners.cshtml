@model Rectify.Models.ViewModels.EditOwnerStatusViewModel
@{
}

<h1>Edit Owners</h1>

<div class="container">
    <div class="box">
        <form asp-action="EditOwners" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group d-flex">
                <p class="me-4"><b>User Name:</b> @Model.UserName</p>
                <p><b>Email:</b> @Model.Email</p>
            </div>


            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" class="form-select"
                        asp-items="@(new SelectList(Model.AvailableStatuses, Model.Status))">
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>