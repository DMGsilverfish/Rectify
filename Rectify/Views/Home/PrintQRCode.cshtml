@{
    Layout = null;
    var companyId = ViewBag.CompanyId as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Print QR Code</title>
    <link href="~/css/print.css" rel="stylesheet" media="print" asp-append-version="true"/>
    
</head>
<body onload="window.print()">
    <div class="full-line">
        <h1><span class="green-check">✔</span>THIS IS RECTIFY.</h1>
    </div>

    <div class="full-line">
        <p class="bold">Something went wrong?</p>
    </div>

    <div class="two-line-message">
        <p>Scan the QR code and message</p>
        <p>directly to the owner.</p>
    </div>

    <!-- Two-column layout starts here -->
    <div class="qr-section-centered">
        <p class="pink top-line">TAP IN. BE HEARD.</p>
        <div class="qr-wrapper">
            <img src="/Home/GenerateQrCode?companyId=@companyId" alt="QR Code" />
        </div>
        <p class="pink bottom-line">LET’S MAKE IT RIGHT.</p>
    </div>


    <!-- Back to full-width -->
    <div class="full-line">
        <p class="bold">Be part of a better business model!</p>
    </div>

    <div class="full-line">
        <p><span class="pink">POWERED BY</span> <span class="bold orange">RECTIFY</span></p>
    </div>
</body>
</html>
